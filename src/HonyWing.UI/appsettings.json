{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/honywing-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}",
          "shared": true
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/errors/honywing-error-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 90,
          "restrictedToMinimumLevel": "Error",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}",
          "shared": true
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "HonyWing",
      "Version": "1.0.0"
    }
  },
  "AppSettings": {
    "General": {
      "AutoSave": true,
      "AutoSaveInterval": 300,
  
      "CheckForUpdates": true
    },
    "ImageMatching": {
      "DefaultThreshold": 0.8,
      "SearchTimeout": 10000,
      "MaxRetries": 3,
      "RetryInterval": 1000,
      "EnableMultiScale": true,
      "ScaleFactors": [ 0.8, 0.9, 1.0, 1.1, 1.2 ]
    },
    "MouseOperation": {
      "DefaultClickDelay": 100,
      "MoveSpeed": 10,
      "EnableSmoothMove": true,
      "DoubleClickInterval": 500
    },
    "UI": {
      "WindowWidth": 1200,
      "WindowHeight": 800,
      "WindowState": "Normal",
      "ShowThumbnails": true,
      "ThumbnailSize": 100,
      "LogMaxLines": 1000
    },
    "Logging": {
      "EnableFileLogging": true,
      "EnableConsoleLogging": true,
      "LogLevel": "Information",
      "MaxLogFiles": 30,
      "MaxLogFileSize": 10485760
    }
  }
}