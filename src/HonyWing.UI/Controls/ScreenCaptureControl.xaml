<UserControl x:Class="HonyWing.UI.Controls.ScreenCaptureControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#FF1E3A8A">
    
    <UserControl.Resources>
        <!-- 截图按钮样式 -->
        <Style x:Key="CaptureButtonStyle" TargetType="Button" BasedOn="{StaticResource DarkBlueButtonStyle}">
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        
        <!-- 工具按钮样式 -->
        <Style x:Key="ToolButtonStyle" TargetType="Button" BasedOn="{StaticResource DarkBlueButtonStyle}">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
        
        <!-- 预览图像样式 -->
        <Style x:Key="PreviewImageStyle" TargetType="Image">
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="StretchDirection" Value="DownOnly"/>
            <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 工具栏 -->
        <Border Grid.Row="0" 
                Background="#FF1E3A8A"
                BorderBrush="#FF3B82F6"
                BorderThickness="0,0,0,1"
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 截图按钮组 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="FullScreenCaptureButton"
                            Content="全屏截图"
                            Style="{StaticResource CaptureButtonStyle}"
                            Click="OnFullScreenCaptureClick"
                            ToolTip="捕获整个屏幕">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🖥️" FontSize="13" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                    
                    <Button x:Name="RegionCaptureButton"
                            Content="区域截图"
                            Style="{StaticResource CaptureButtonStyle}"
                            Click="OnRegionCaptureClick"
                            ToolTip="选择区域进行截图">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✂️" FontSize="14" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                    
                    <Button x:Name="WindowCaptureButton"
                            Content="窗口截图"
                            Style="{StaticResource CaptureButtonStyle}"
                            Click="OnWindowCaptureClick"
                            ToolTip="捕获指定窗口">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🪟" FontSize="14" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                    
                    <Separator Style="{DynamicResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0"/>
                    
                    <!-- 延迟设置 -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0">
                        <TextBlock Text="延迟:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,5,0"
                                   FontSize="13"
                                   Foreground="White"/>
                        <ComboBox x:Name="DelayComboBox" 
                                  Width="80"
                                  SelectedIndex="0"
                                  Style="{StaticResource DarkBlueComboBoxStyle}"
                                  ToolTip="截图延迟时间">
                            <ComboBoxItem Content="无延迟" Tag="0"/>
                            <ComboBoxItem Content="1秒" Tag="1"/>
                            <ComboBoxItem Content="3秒" Tag="3"/>
                            <ComboBoxItem Content="5秒" Tag="5"/>
                            <ComboBoxItem Content="10秒" Tag="10"/>
                        </ComboBox>
                        <TextBlock Text="秒" 
                                   VerticalAlignment="Center" 
                                   Margin="5,0,0,0"
                                   FontSize="12"
                                   Foreground="White"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- 工具按钮组 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">

                    
                    <Button x:Name="CopyButton"
                            Style="{StaticResource ToolButtonStyle}"
                            Click="OnCopyClick"
                            IsEnabled="False"
                            ToolTip="复制到剪贴板">
                        <TextBlock Text="📋" FontSize="16"/>
                    </Button>
                    
                    <Button x:Name="ClearButton"
                            Style="{StaticResource ToolButtonStyle}"
                            Click="OnClearClick"
                            IsEnabled="False"
                            ToolTip="清空截图">
                        <TextBlock Text="🗑️" FontSize="16"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- 预览区域 -->
        <Grid Grid.Row="1" Margin="10">
            <!-- 无截图时的提示 -->
            <Border x:Name="EmptyStatePanel"
                    Background="#FF1E3A8A"
                    BorderBrush="#FF3B82F6"
                    BorderThickness="2"
                    CornerRadius="8">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="📷" 
                               FontSize="13" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,10"
                               Foreground="White"
                               Opacity="0.5"/>
                    <TextBlock Text="点击上方按钮开始截图" 
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Opacity="0.7"/>
                    <TextBlock Text="支持全屏、区域和窗口截图" 
                               FontSize="12"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"
                               Opacity="0.5"/>
                </StackPanel>
            </Border>
            
            <!-- 截图预览 -->
            <ScrollViewer x:Name="PreviewScrollViewer"
                          Visibility="Collapsed"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          Background="#FF1E3A8A">
                <Image x:Name="PreviewImage"
                       Style="{StaticResource PreviewImageStyle}"
                       MouseLeftButtonDown="OnPreviewImageClick"/>
            </ScrollViewer>
        </Grid>
        
        <!-- 状态栏 -->
        <Border Grid.Row="2" 
                Background="#FF1E3A8A"
                BorderBrush="#FF3B82F6"
                BorderThickness="0,1,0,0"
                Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 状态信息 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock x:Name="StatusText" 
                               Text="就绪" 
                               FontSize="12"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    
                    <Rectangle Width="1" 
                               Height="12" 
                               Fill="#FF3B82F6" 
                               Margin="10,0"
                               VerticalAlignment="Center"/>
                    
                    <TextBlock x:Name="ImageInfoText" 
                               FontSize="12"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Visibility="Collapsed"/>
                </StackPanel>
                
                <!-- 进度指示器 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <ProgressBar x:Name="CaptureProgressBar"
                                 Width="100"
                                 Height="4"
                                 Visibility="Collapsed"
                                 IsIndeterminate="True"/>
                    
                    <TextBlock x:Name="CountdownText"
                               FontSize="12"
                               Foreground="White"
                               Visibility="Collapsed"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>