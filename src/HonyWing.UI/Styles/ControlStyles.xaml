<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="http://schemas.modernwpf.com/2019">

    <!-- 面板样式 -->
    <Style x:Key="CardPanelStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseLowBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="8" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 分组框样式 -->
    <Style x:Key="GroupBoxStyle" TargetType="GroupBox" BasedOn="{StaticResource DefaultGroupBoxStyle}">
        <Setter Property="Padding" Value="12" />
        <Setter Property="Margin" Value="4" />
        <!-- <Setter Property="ui:ControlHelper.CornerRadius" Value="6" /> -->
        <Setter Property="HeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding}" Style="{StaticResource Heading3TextStyle}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 未使用的文本框样式已删除 -->

    <!-- 数字输入框样式 -->
    <!-- <Style x:Key="NumberBoxStyle" TargetType="ui:NumberBox" BasedOn="{StaticResource DefaultNumberBoxStyle}">
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="MinHeight" Value="36" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="ui:ControlHelper.CornerRadius" Value="4" />
        <Setter Property="SpinButtonPlacementMode" Value="Inline" />
    </Style> -->

    <!-- 组合框样式 -->
    <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource DefaultComboBoxStyle}">
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="MinHeight" Value="28" />
        <Setter Property="FontSize" Value="14" />
        <!-- <Setter Property="ui:ControlHelper.CornerRadius" Value="4" /> -->
    </Style>

    <!-- 未使用的列表框样式已删除 -->

    <!-- 列表项样式 -->
    <Style x:Key="ModernListBoxItemStyle" TargetType="ListBoxItem" BasedOn="{StaticResource DefaultListBoxItemStyle}">
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="Margin" Value="2" />
        <!-- <Setter Property="ui:ControlHelper.CornerRadius" Value="4" /> -->
    </Style>

    <!-- 复选框样式 -->
    <Style x:Key="ModernCheckBoxStyle" TargetType="CheckBox" BasedOn="{StaticResource DefaultCheckBoxStyle}">
        <Setter Property="Padding" Value="8,0,0,0" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <!-- 未使用的单选按钮样式已删除 -->

    <!-- 滑块样式 -->
    <Style x:Key="ModernSliderStyle" TargetType="Slider" BasedOn="{StaticResource DefaultSliderStyle}">
        <Setter Property="Height" Value="32" />
    </Style>

    <!-- 进度条样式 -->
    <Style x:Key="ModernProgressBarStyle" TargetType="ProgressBar" BasedOn="{StaticResource DefaultProgressBarStyle}">
        <Setter Property="Height" Value="6" />
        <!-- <Setter Property="ui:ControlHelper.CornerRadius" Value="3" /> -->
    </Style>

    <!-- 分隔符样式 -->
    <Style x:Key="HorizontalSeparatorStyle" TargetType="Separator">
        <Setter Property="Background" Value="{DynamicResource SystemControlForegroundBaseLowBrush}" />
        <Setter Property="Height" Value="1" />
        <Setter Property="Margin" Value="0,8" />
    </Style>

    <Style x:Key="VerticalSeparatorStyle" TargetType="Separator">
        <Setter Property="Background" Value="{DynamicResource SystemControlForegroundBaseLowBrush}" />
        <Setter Property="Width" Value="1" />
        <Setter Property="Margin" Value="8,0" />
    </Style>

    <!-- 滚动查看器样式 -->
    <Style x:Key="ModernScrollViewerStyle" TargetType="ScrollViewer">
        <!-- <Setter Property="ui:ScrollViewerHelper.AutoHideScrollBars" Value="True" /> -->
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto" />
    </Style>

    <!-- 展开器样式 -->
    <Style x:Key="ModernExpanderStyle" TargetType="Expander" BasedOn="{StaticResource DefaultExpanderStyle}">
        <!-- <Setter Property="ui:ControlHelper.CornerRadius" Value="6" /> -->
        <Setter Property="Padding" Value="12" />
        <Setter Property="Margin" Value="4" />
    </Style>

    <!-- 标签页控件样式 -->
    <Style x:Key="ModernTabControlStyle" TargetType="TabControl" BasedOn="{StaticResource DefaultTabControlStyle}">
        <!-- <Setter Property="ui:ControlHelper.CornerRadius" Value="6" /> -->
        <Setter Property="Padding" Value="0" />
    </Style>

    <!-- 标签页项样式 -->
    <Style x:Key="ModernTabItemStyle" TargetType="TabItem" BasedOn="{StaticResource DefaultTabItemStyle}">
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <!-- 工具提示样式 -->
    <Style x:Key="ModernToolTipStyle" TargetType="ToolTip">
        <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundChromeWhiteBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundChromeGrayBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="FontSize" Value="12" />
        <!-- <Setter Property="ui:ControlHelper.CornerRadius" Value="4" /> -->
    </Style>

    <!-- 上下文菜单样式 -->
    <Style x:Key="ModernContextMenuStyle" TargetType="ContextMenu" BasedOn="{StaticResource DefaultContextMenuStyle}">
        <!-- <Setter Property="ui:ControlHelper.CornerRadius" Value="6" /> -->
        <Setter Property="Padding" Value="4" />
    </Style>

    <!-- 菜单项样式 -->
    <Style x:Key="ModernMenuItemStyle" TargetType="MenuItem" BasedOn="{StaticResource DefaultMenuItemStyle}">
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- 状态栏样式 -->
    <Style x:Key="ModernStatusBarStyle" TargetType="StatusBar">
        <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseLowBrush}" />
        <Setter Property="BorderThickness" Value="0,1,0,0" />
        <Setter Property="Height" Value="28" />
        <Setter Property="Padding" Value="8,0" />
    </Style>

    <!-- 图像样式 -->
    <Style x:Key="ThumbnailImageStyle" TargetType="Image">
        <Setter Property="Stretch" Value="Uniform" />
        <Setter Property="StretchDirection" Value="Both" />
        <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" Opacity="0.2" ShadowDepth="1" BlurRadius="4" />
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
