<Application x:Class="HonyWing.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:converters="clr-namespace:HonyWing.UI.Converters"
             ShutdownMode="OnExplicitShutdown"
             DispatcherUnhandledException="Application_DispatcherUnhandledException">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- ModernWPF 主题资源 - 暂时注释掉以解决XAML解析问题 -->
                <!-- <ui:ThemeResources /> -->
                <!-- <ui:XamlControlsResources /> -->

                <!-- 深蓝色统一主题样式 -->
                <ResourceDictionary Source="Styles/DarkBlueTheme.xaml"/>

                <!-- 自定义样式资源 -->
                <ResourceDictionary Source="Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="Styles/TextStyles.xaml"/>
                <ResourceDictionary Source="Styles/ControlStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- 全局转换器 -->
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>

            <!-- 深蓝色主题全局颜色定义 -->
            <SolidColorBrush x:Key="PrimaryBrush" Color="#1E3A8A"/>
            <SolidColorBrush x:Key="SecondaryBrush" Color="#2563EB"/>
            <SolidColorBrush x:Key="AccentBrush" Color="#3B82F6"/>
            <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
            <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
            <SolidColorBrush x:Key="ErrorBrush" Color="#EF4444"/>

            <!-- 设置默认控件样式 -->
            <Style TargetType="Window" BasedOn="{StaticResource DarkBlueWindowStyle}"/>
            <Style TargetType="TextBlock" BasedOn="{StaticResource DarkBlueTextBlockStyle}"/>
            <Style TargetType="Button" BasedOn="{StaticResource DarkBluePrimaryButtonStyle}"/>
            <Style TargetType="TextBox" BasedOn="{StaticResource DarkBlueTextBoxStyle}"/>
            <Style TargetType="ComboBox" BasedOn="{StaticResource DarkBlueComboBoxStyle}"/>
            <Style TargetType="ComboBoxItem" BasedOn="{StaticResource DarkBlueComboBoxItemStyle}"/>
            <Style TargetType="ListBox" BasedOn="{StaticResource DarkBlueListBoxStyle}"/>
            <Style TargetType="ListBoxItem" BasedOn="{StaticResource DarkBlueListBoxItemStyle}"/>
            <Style TargetType="CheckBox" BasedOn="{StaticResource DarkBlueCheckBoxStyle}"/>
            <Style TargetType="RadioButton" BasedOn="{StaticResource DarkBlueRadioButtonStyle}"/>
            <Style TargetType="GroupBox" BasedOn="{StaticResource DarkBlueGroupBoxStyle}"/>
            <Style TargetType="TabControl" BasedOn="{StaticResource DarkBlueTabControlStyle}"/>
            <Style TargetType="TabItem" BasedOn="{StaticResource DarkBlueTabItemStyle}"/>
            <Style TargetType="StatusBar" BasedOn="{StaticResource DarkBlueStatusBarStyle}"/>
            <Style TargetType="ScrollBar" BasedOn="{StaticResource DarkBlueScrollBarStyle}"/>
            <Style TargetType="ToolTip" BasedOn="{StaticResource DarkBlueToolTipStyle}"/>
            <Style TargetType="ContextMenu" BasedOn="{StaticResource DarkBlueContextMenuStyle}"/>
            <Style TargetType="MenuItem" BasedOn="{StaticResource DarkBlueMenuItemStyle}"/>

            <!-- 全局字体定义 -->
            <FontFamily x:Key="PrimaryFontFamily">Microsoft YaHei UI, Segoe UI, Arial</FontFamily>
            <FontFamily x:Key="MonospaceFontFamily">Consolas, Courier New</FontFamily>

            <!-- 全局尺寸定义 -->
            <sys:Double x:Key="StandardFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">12</sys:Double>
            <sys:Double x:Key="SmallFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">12</sys:Double>
            <sys:Double x:Key="LargeFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">16</sys:Double>
            <sys:Double x:Key="HeaderFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">18</sys:Double>

            <sys:Double x:Key="StandardCornerRadius" xmlns:sys="clr-namespace:System;assembly=mscorlib">4</sys:Double>
            <sys:Double x:Key="LargeCornerRadius" xmlns:sys="clr-namespace:System;assembly=mscorlib">8</sys:Double>

            <Thickness x:Key="StandardMargin">5</Thickness>
            <Thickness x:Key="StandardPadding">10</Thickness>
            <Thickness x:Key="SmallPadding">5</Thickness>
            <Thickness x:Key="LargePadding">15</Thickness>
        </ResourceDictionary>
    </Application.Resources>
</Application>
